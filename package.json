{
  "name": "cjs2esm",
  "description": "Transforms a project that uses CommonJS to ES Modules.",
  "homepage": "https://homer0.github.io/cjs2esm/",
  "version": "5.0.0",
  "repository": "homer0/cjs2esm",
  "author": "Leonardo Apiwan (@homer0) <me@homer0.com>",
  "keywords": [
    "commonjs",
    "esmodules",
    "cjs",
    "esm",
    "es-modules"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "5to6-codemod": "1.8.0",
    "chalk": "^5.6.2",
    "fs-extra": "^11.3.2",
    "jscodeshift": "17.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@homer0/eslint-plugin": "^14.2.2",
    "@homer0/prettier-config": "^2.0.0",
    "@homer0/prettier-plugin-jsdoc": "^11.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "docdash": "homer0/docdash#semver:^2.1.2",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^30.2.0",
    "jimple": "^1.5.0",
    "jsdoc": "^4.0.5",
    "jsdoc-ts-utils": "^6.0.0",
    "leasot": "^14.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2"
  },
  "main": "src/index.js",
  "bin": {
    "cjs2esm": "./src/bin.js"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=20"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": [
      "eslint",
      "prettier --write"
    ]
  },
  "scripts": {
    "prepublishOnly": "./utils/scripts/prepublishOnly",
    "test": "./utils/scripts/test",
    "lint": "./utils/scripts/lint",
    "lint:all": "./utils/scripts/lint-all",
    "docs": "./utils/scripts/docs",
    "todo": "./utils/scripts/todo",
    "prepare": "./utils/scripts/prepare"
  },
  "config": {
    "cjs2esm": {
      "ignore": [
        "5to6-codemod"
      ],
      "filesWithShebang": [
        "src/bin.js"
      ]
    }
  }
}
